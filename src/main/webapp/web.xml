<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>com.internet.shop.controller.IndexController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>com.internet.shop.controller.GetAllUsersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/users/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.internet.shop.controller.RegistrationController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>injectData</servlet-name>
        <servlet-class>com.internet.shop.controller.InjectDataController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>injectData</servlet-name>
        <url-pattern>/inject-data</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>com.internet.shop.controller.DeleteUserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/users/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>com.internet.shop.controller.AddProductController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allProducts</servlet-name>
        <servlet-class>com.internet.shop.controller.GetAllProductsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allProducts</servlet-name>
        <url-pattern>/products/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>buyProduct</servlet-name>
        <servlet-class>com.internet.shop.controller.AddProductToShoppingCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>buyProduct</servlet-name>
        <url-pattern>/shopping-carts/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cartProducts</servlet-name>
        <servlet-class>com.internet.shop.controller.GetShoppingCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cartProducts</servlet-name>
        <url-pattern>/shopping-carts/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteProductFromShoppingCart</servlet-name>
        <servlet-class>com.internet.shop.controller.DeleteProductFormShoppingCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteProductFromShoppingCart</servlet-name>
        <url-pattern>/shopping-carts/products/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createOrder</servlet-name>
        <servlet-class>com.internet.shop.controller.CreateOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createOrder</servlet-name>
        <url-pattern>/order/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allOrders</servlet-name>
        <servlet-class>com.internet.shop.controller.GetUsersOrdersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allOrders</servlet-name>
        <url-pattern>/users/order</url-pattern>
    </servlet-mapping>
</web-app>
